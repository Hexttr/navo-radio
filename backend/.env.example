# NAVO RADIO — скопируйте в .env и заполните значения
# cp .env.example .env

# Часовой пояс расписания (Москва)
TZ=Europe/Moscow

# Режим: 0 = расписание (врезки), 1 = всегда музыка
FORCE_MUSIC=0

# FFmpeg: пусто = из PATH. Ubuntu: apt install ffmpeg
FFMPEG_PATH=

# Jamendo (devportal.jamendo.com)
JAMENDO_CLIENT_ID=your_jamendo_client_id

# Groq (console.groq.com)
GROQ_API_KEY=your_groq_api_key

# TTS: edge (бесплатно) | elevenlabs
TTS_PROVIDER=edge
ELEVENLABS_API_KEY=

# WeatherAPI.com (бесплатный тариф)
WEATHER_API_KEY=

# Icecast — должен совпадать с icecast.xml
ICECAST_HOST=localhost
ICECAST_PORT=8000
ICECAST_MOUNT=stream
ICECAST_PASSWORD=your_icecast_source_password
