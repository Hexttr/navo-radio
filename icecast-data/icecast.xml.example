<?xml version="1.0" encoding="UTF-8"?>
<icecast>
    <location>Earth</location>
    <admin>icemaster@localhost</admin>
    <hostname>localhost</hostname>

    <limits>
        <clients>100</clients>
        <sources>2</sources>
        <queue-size>524288</queue-size>
        <client-timeout>30</client-timeout>
        <header-timeout>15</header-timeout>
        <source-timeout>120</source-timeout>
        <burst-size>65535</burst-size>
    </limits>

    <authentication>
        <source-password>YOUR_PASSWORD</source-password>
        <relay-password>YOUR_PASSWORD</relay-password>
        <admin-user>admin</admin-user>
        <admin-password>YOUR_PASSWORD</admin-password>
    </authentication>

    <listen-socket>
        <port>8000</port>
    </listen-socket>

    <http-headers>
        <header type="cors" name="Access-Control-Allow-Origin" />
        <header type="cors" name="Access-Control-Allow-Headers" />
        <header type="cors" name="Access-Control-Expose-Headers" />
    </http-headers>

    <paths>
        <basedir>C:/Program Files/Icecast</basedir>
        <logdir>ABSOLUTE_PATH_TO_PROJECT/icecast-data/log</logdir>
        <webroot>C:/Program Files/Icecast/web</webroot>
        <adminroot>C:/Program Files/Icecast/admin</adminroot>
        <!-- reportxmldb может вызывать ошибку "Unknown name <report-db>" в некоторых версиях Icecast — закомментировано -->
        <!-- <reportxmldb>ABSOLUTE_PATH_TO_PROJECT/icecast-data/report-db.xml</reportxmldb> -->
        <alias source="/" destination="/status.xsl"/>
    </paths>

    <logging>
        <accesslog>access.log</accesslog>
        <errorlog>error.log</errorlog>
        <loglevel>warning</loglevel>
        <logsize>10000</logsize>
    </logging>

    <security>
        <prng-seed type="static">NAVOradio2026StaticSeedForLocalTestingOnlyMinimum64charsRequiredHere</prng-seed>
    </security>
</icecast>
